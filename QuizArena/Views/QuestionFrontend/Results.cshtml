@model QuizArena.Models.QuizResults

@{
    ViewBag.Title = "Quiz Results";
}
@{
    Layout = "_QuizFrontendBackupLayout";
}
<main id="home2">
    <section class="hero2 py-5 text-center" id="hero">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col d-flex justify-content-center align-items-center flex-column">
                    <h1 class="text-light fw-bold display-4 mb-4 text-shadow">Quiz Results</h1>
                    <a href="#results" class="btn btn-dark btn-lg shadow-lg rounded-pill">View Results</a>
                </div>
            </div>
        </div>
    </section>
</main>
<section id="results" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="results-card p-5 shadow-lg rounded-lg text-center">
                <h2 class="fw-bold mb-4 text-dark">Congratulations!</h2>
                <p class="fs-4 mb-4">Name: <span class="fw-semibold text-dark">@ViewBag.users</span></p>
                <p class="fs-5 mb-4">Total Score: <span class="fw-semibold text-success">@Model.TotalScore</span></p>
                <p class="fs-5 mb-4">Total Questions: <span class="fw-semibold text-info">@Model.TotalQuestions</span></p>
                <a href="@Url.Action("Index", "QuizFrontend")" class="btn btn-dark btn-lg shadow-lg rounded-pill">Back to Quizzes</a>
            </div>
        </div>
    </div>
</section>
<style>
        .hero2 h1 {
            font-size: 4rem;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
        }
    .btn-dark {
        background-color: #000;
        color: #fff;
        border-radius: 50px;
        padding: 12px 24px;
        font-size: 1.25rem;
        border: 2px solid #000;
        transition: all 0.3s ease;
    }
        .btn-dark:hover {
            background-color: #fff;
            color: #000;
            border-color: #000;
            transform: scale(1.05);
        }
    .results-card {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        background-image: linear-gradient(135deg, #f5f5f5 25%, #ffffff 25%, #ffffff 50%, #f5f5f5 50%, #f5f5f5 75%, #ffffff 75%);
        background-size: 28px 28px;
    }
        .results-card h2 {
            font-size: 2.5rem;
            color: #000;
            background: -webkit-linear-gradient(#000, #333);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .results-card p {
            font-size: 1.25rem;
            color: #333;
        }
        .results-card .fw-semibold {
            font-weight: 600;
        }
    .btn-primary {
        background-color: #000;
        border-color: #000;
        padding: 12px 24px;
        font-size: 1.25rem;
        border-radius: 50px;
        transition: background-color 0.3s, border-color 0.3s, box-shadow 0.3s;
    }
        .btn-primary:hover {
            background-color: #333;
            border-color: #333;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }
    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }
</style>
