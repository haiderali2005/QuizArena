@model IEnumerable<QuizArena.Models.Question>

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Questions List</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().QuestionText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Quiz)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quiz.Title)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.QuestionId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
