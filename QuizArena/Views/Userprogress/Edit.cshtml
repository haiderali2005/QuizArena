@model QuizArena.Models.UserProgress

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1>Edit User Progress</h1>
    <div class="card">
        <div class="card-body">
            <h4>UserProgress</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="QuizId" class="form-label">Quiz</label>
                    @Html.Partial("_quizzes", ViewData["_quiz"])
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Completed" />
                    <label class="form-check-label" for="Completed">
                        @Html.DisplayNameFor(model => model.Completed)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="Score" class="form-label">Score</label>
                    <input asp-for="Score" class="form-control" required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Score"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
