@model List<Quiz>
@foreach (var data in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card h-100 border-0 shadow-lg rounded">
            <div class="d-flex justify-content-center">
                <img src="@("~/quizimages/" + data.QuizImage)" asp-append-version="true" class="card-img-top rounded-top" alt="Quiz Image" style="width: 100%; height: auto; object-fit: cover; max-height: 200px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);" />
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title text-center fw-bold mb-3 text-dark" style="font-size: 1.25rem; letter-spacing: 0.5px;">@data.Title</h5>
                <p class="card-text text-center mb-4 text-secondary" style="font-size: 1rem; line-height: 1.6;">@data.Description</p>
                <a href="@Url.Action("Index", "QuestionFrontend", new { id = data.QuizId })" class="btn btn-dark mt-auto" style="border-radius: 25px; padding: 10px 20px; font-size: 1rem;">Start Quiz</a>
            </div>
        </div>
    </div>





}

