@model IEnumerable<QuizArena.Models.Option>

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h1>Options List</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().OptionText)</th>
                <th>@Html.DisplayNameFor(model => model.First().Question)</th>
                <th>Is Correct</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OptionText)</td>
                    <td>@Html.DisplayFor(modelItem => item.Question.QuestionText)</td>
                    <td>
                        <input type="checkbox" disabled @(item.IsCorrect ? "checked" : "") />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
