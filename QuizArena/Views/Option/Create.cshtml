@model QuizArena.Models.Option

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="mb-4">Create Option</h1>

    <form asp-action="Create">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Option Details</h5>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="QuestionId" class="form-label">Question</label>
                    @Html.Partial("_ques", ViewData["_question"])
                </div>

                <div class="mb-3">
                    <label asp-for="OptionText" class="form-label">Option Text</label>
                    <input asp-for="OptionText" class="form-control" required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="OptionText"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsCorrect" class="form-check-input" type="checkbox" id="isCorrect" />
                    <label class="form-check-label" for="isCorrect">
                        @Html.DisplayNameFor(model => model.IsCorrect)
                    </label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
