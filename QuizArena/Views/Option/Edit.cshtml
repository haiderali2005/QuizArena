@model QuizArena.Models.Option

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Edit Option</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="QuestionId" class="form-label">Question</label>
                    @Html.Partial("_ques", ViewData["_question"])
                </div>

                <div class="mb-3">
                    <label asp-for="OptionText" class="form-label">Option Text</label>
                    <input asp-for="OptionText" class="form-control" required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="OptionText"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsCorrect" class="form-check-input" type="checkbox" id="isCorrect" />
                    <label class="form-check-label" for="isCorrect">
                        @Html.DisplayNameFor(model => model.IsCorrect)
                    </label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
