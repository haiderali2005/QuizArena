@model QuizArena.Models.Option

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="card-text">Are you sure you want to delete this option?</p>
            <hr />
            <h4 class="mb-4">Option Details</h4>
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.OptionText)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OptionText)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Question)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Question.QuestionText)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    Is Correct
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsCorrect)
                </dd>
            </dl>
            <div class="d-flex justify-content-end">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
