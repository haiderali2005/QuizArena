<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="~/style.css">
    <script src="jquery-3.6.3 (1).js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <title>QuizArena</title>
    <style>
        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            display: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top darkk">
        <div class="container">
            <a class="navbar-brand text-white" href="#" style="pointer-events: none;"><h1>QuizArena</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars" style="color: white;"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto m-2">
                    <li class="nav-item">
                        <a class="nav-link active m-2 text-white" aria-current="page" asp-action="Index" asp-controller="QuizFrontend" style="font-size: 20px; font-weight: 600;">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","QuizFrontend")" class="nav-link active m-2 text-white" aria-current="page" style="font-size: 20px; font-weight: 600;">About</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index","QuizFrontend")" class="nav-link active m-2 text-white" aria-current="page" style="font-size: 20px; font-weight: 600;">Quizzes</a>
                    </li>
                    @{
                        var username = Context.Session.GetString("mysessionfrontend");
                    }
                    @if (!string.IsNullOrEmpty(username))
                    {

                        <li class="nav-item">
                            <a class="nav-link active m-2 text-white" aria-current="page" asp-action="Logout" asp-controller="AuthenticationFrontend" style="font-size: 20px; font-weight: 600;">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active m-2 text-white" aria-current="page" asp-action="Login" asp-controller="AuthenticationFrontend" style="font-size: 20px; font-weight: 600;">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    <main id="footer2">
        <section class="mt-5">
